@page "/counter"
@inject CounterState CounterState
<h1>Counter</h1>

@*<p>Current count: @currentCount</p>*@
<p>Current count: @CounterState.GetCurretCount()</p>
<button class="btn btn-primary" @onclick="IncrementCount1">Click me</button>
<button class="btn btn-warning" @onclick="CounterState.ResetCurrentCount">Reset Count</button>

@code {

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    void IncrementCount1()
    {
        int currentCount = CounterState.GetCurretCount();
        currentCount++;
        CounterState.SetCurrentCount(currentCount);
    }
}
